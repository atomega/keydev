			<?php 
				$mute = shell_exec('bin/gpio/webGpio get mute');
				if($mute == 0)
				{
					?><input type="submit" value="Mute" id="mute" name="mute" class="muteButton buttonRed" onclick="myFunction()" /><?php
				}
				elseif($mute == 1) 
				{
					?><input type="submit" value="Sound" id="mute" name="mute" class="muteButton buttonGreen" onclick="myFunction()" /><?php
				}
				else 
				{
					?><input type="submit" value="Error" id="mute" class="muteButton buttonGreen" onclick="myFunction()" /><?php
				}
			?>
			</form>
			<?php
				if (isset($_GET["mute"])) 
				{
					$sm = strip_tags ($_GET['mute']);
					if($sm == "Mute")
					{
						echo("Mute Pressed<br>");
						shell_exec('bin/gpio/webGpio set mute low');
					}
					elseif($sm == "Sound") 
					{
						echo("Sound Pressed<br>");
						shell_exec('bin/gpio/webGpio set mute high');
					}
					else 
					{
						echo("Error<br>");
					}
				}
			?>

			<script>
			function myFunction() 
			{
				var x = document.getElementById("mute");
				if (x.value === "Mute") 
				{
					x.className = "muteButton buttonGreen";
					x.value = "Sound";
				} 
				else 
				{
					x.className = "muteButton buttonRed";
					x.value = "Mute";
				}
			}
			</script>

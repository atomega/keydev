			<script>
			function myFunction() 
			{
				var x = document.getElementById("mute");
				if (x.value === "Mute") 
				{
					x.className = "muteButton buttonGreen";
					x.value = "Sound";
					<?php shell_exec('bin/gpio/webGpio set mute low'); ?>
				} 
				else 
				{
					x.className = "muteButton buttonRed";
					x.value = "Mute";
					<?php shell_exec('bin/gpio/webGpio set mute high'); ?>
				} 
				}
			}
			</script>
